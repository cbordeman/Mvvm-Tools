<views:DialogWindow
    x:Class="MvvmTools.Views.SelectFileDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MvvmTools.Views"
    xmlns:viewModels="clr-namespace:MvvmTools.ViewModels"
    Title="Select File - MVVM Tools"
    Width="600"
    Height="300"
    d:DataContext="{d:DesignInstance viewModels:SelectFileDialogViewModel}"
    FontFamily="Microsoft Sans Serif"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="5,5,5,0">
        <Grid.Resources>
            <Style x:Key="LeftAlignedHeaderStyle" TargetType="GridViewColumnHeader">
                <Setter Property="HorizontalContentAlignment" Value="Left" />
                <Setter Property="Margin" Value="3,1" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListView
            x:Name="MyListView"
            ItemsSource="{Binding Documents}"
            Loaded="MyListView_OnLoaded"
            SelectedValue="{Binding SelectedDocument}"
            SelectionChanged="MyListView_OnSelectionChanged">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding ProjectItem.Name}"
                            Header="File"
                            HeaderContainerStyle="{StaticResource LeftAlignedHeaderStyle}" />
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Type.Class}"
                            Header="Class"
                            HeaderContainerStyle="{StaticResource LeftAlignedHeaderStyle}" />
                        <GridViewColumn
                            DisplayMemberBinding="{Binding ProjectItem.ContainingProject.Name}"
                            Header="Project"
                            HeaderContainerStyle="{StaticResource LeftAlignedHeaderStyle}" />
                        <GridViewColumn
                            DisplayMemberBinding="{Binding RelativeNamespace}"
                            Header="Namespace"
                            HeaderContainerStyle="{StaticResource LeftAlignedHeaderStyle}" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel
            Grid.Row="1"
            Margin="0,10,5,10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="OkButton"
                Width="75"
                Padding="0,5"
                Click="OkButton_OnClick"
                Content="_OK"
                IsDefault="True" />
            <Button
                x:Name="CancelButton"
                Width="75"
                Margin="8,0,0,0"
                Padding="0,5"
                Click="CancelButton_OnClick"
                Content="Cancel" />
        </StackPanel>
    </Grid>
</views:DialogWindow>
